<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e2dfdf">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnNguoiDung"
            android:background="#ffffff"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:paddingLeft="35dp"
            android:drawablePadding="-100dp"
            android:drawableLeft="@drawable/ic_person"
            android:text="Thông tin người dùng"/>

        <Button
            android:id="@+id/btnDangTin"
            android:background="#ffffff"
            android:layout_marginTop="15dp"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:paddingLeft="35dp"
            android:drawablePadding="-120dp"
            android:text="Đăng tin ngay"
            android:drawableLeft="@drawable/ic_news"
            android:layout_below="@+id/btnNguoiDung"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btnDangXuat"
            android:background="#ffffff"
            android:layout_marginTop="15dp"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:paddingLeft="35dp"
            android:drawableLeft="@drawable/ic_signout"
            android:drawablePadding="-150dp"
            android:text="Đăng xuất"
            android:layout_below="@+id/btnDangTin"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btnTroGiup"
            android:background="#ffffff"
            android:layout_marginTop="8dp"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:paddingLeft="35dp"
            android:drawablePadding="-160dp"
            android:text="Trợ giúp"
            android:drawableLeft="@drawable/ic_help"
            android:layout_below="@+id/btnDangXuat"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btnThongTin"
            android:background="#ffffff"
            android:layout_marginTop="8dp"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:paddingLeft="35dp"
            android:drawablePadding="-150dp"
            android:text="Thông tin"
            android:drawableLeft="@drawable/ic_info_outline_red_500_24dp"
            android:layout_below="@+id/btnTroGiup"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btnQuanLyTin"
            android:layout_below="@+id/btnThongTin"
            android:background="#ffffff"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:paddingLeft="35dp"
            android:drawablePadding="-150dp"
            android:drawableLeft="@drawable/ic_management"
            android:text="Quản lý tin "/>


        <Button
            android:id="@+id/btnThoat"
            android:layout_below="@+id/btnQuanLyTin"
            android:background="#ffffff"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:paddingLeft="35dp"
            android:drawablePadding="-100dp"
            android:drawableLeft="@drawable/ic_exit"
            android:text="Thoát ứng dụng"/>

        <Button
            android:id="@+id/btnDuyeTinCM"
            android:layout_below="@+id/btnThoat"
            android:background="#ffffff"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:paddingLeft="35dp"
            android:drawablePadding="-150dp"
            android:drawableLeft="@drawable/ic_approve"
            android:text="Duyệt tin "/>

    </RelativeLayout>



</ScrollView>