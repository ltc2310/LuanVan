<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Ngày đăng:"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textColor="#1128ae"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView20"
            android:layout_weight="0.38" />

        <TextView
            android:textColor="#1128ae"
            android:text="4/8/2017"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtNgayDangCAM1"
            android:layout_marginTop="15dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Giá phòng:"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#1128ae"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:text="1.200.000"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#eff59504"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtGiaPhongCAM1"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Diện tích:"
            android:textStyle="bold"
            android:textColor="#1128ae"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView17"
            android:layout_weight="1" />

        <TextView
            android:text="20"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#1128ae"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDienTichCAM1"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#1128ae"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="15dp"
            android:layout_weight="1"
            android:text="Địa chỉ:" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#1128ae"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="637/33 Quang Trung Phường 11 Quận Gò Vấp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDiaChiCAM1"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgHinhCanTim1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_weight="0.54" />

    <ImageButton
        android:id="@+id/btnUnlikeTimPhong"
        android:layout_below="@+id/btnThongTin"
        android:background="@null"
        android:layout_marginTop="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:drawablePadding="-50dp"
        android:src="@drawable/ic_dislike"
        />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0026ff"
        android:layout_marginTop="15dp"
        android:text="" />
</LinearLayout>