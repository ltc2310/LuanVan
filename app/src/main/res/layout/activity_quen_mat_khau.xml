<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="vn.home.com.bottombar.QuenMatKhauActivity"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quên mật khẩu"
        android:textColor="#2c00f0"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="0.03" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tiltwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tilone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColorHint="#303F9F">

        <EditText
            android:id="@+id/txtResetPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email" />

        <Button
            android:id="@+id/btnResetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Gửi" />
    </android.support.design.widget.TextInputLayout>

    <ProgressBar
        android:layout_marginTop="25dp"
        android:id="@+id/progressBarResetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnResetPassword"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btnDangNhapLai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:textColor="#2c00f0"
        android:background="@null"
        android:text="Đăng nhập tại đây" />

</LinearLayout>
